#container
  #title
    Abbrv8

  #shorten-form
    = form_for :abbrv8_url, url: {action: 'create'} do |f|
      .text-box
        = f.text_field :long_url
      .button
        = f.submit "Shorten"

  #short-url= link_to(@short_url, @short_url) unless @short_url.blank?

  #errors
    - if @error_messages
      - @error_messages.each do |message|
        .message= message

